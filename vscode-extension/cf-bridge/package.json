{
  "name": "AlgoBridge",
  "displayName": "AlgoBridge",
  "description": "Codeforces Bridge for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:cpp",
    "onView:algoBridge.problemView"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "algoBridgeContainer",
          "title": "AlgoBridge",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "algoBridgeContainer": [
        {
          "id": "algoBridge.problemView",
          "name": "Problem Statement",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "mathjax-full": "^3.2.1"
  }
}
