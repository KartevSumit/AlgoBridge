{
  "manifest_version": 3,
  "name": "AlgoBridge",
  "version": "1.0.0",
  "description": "Send Codeforces problem statement to VS Code",

  "permissions": ["activeTab"],
  "host_permissions": ["https://codeforces.com/*", "http://localhost:27123/*"],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Send problem to VS Code",
    "default_icon": {
      "16": "icons/btn16.png",
      "32": "icons/btn32.png",
      "64": "icons/btn64.png",
      "128": "icons/btn128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://codeforces.com/contest/*", "*://codeforces.com/problemset/problem/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
